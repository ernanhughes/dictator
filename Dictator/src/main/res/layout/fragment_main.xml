<RelativeLayout
    android:id="@+id/layout_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:background="@drawable/main_button_border"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <View
        android:id="@+id/middle_separator"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_centerVertical="true" />

    <include
        android:id="@+id/sudoku_board"
        layout="@layout/fragment_main_record" />

    <ViewSwitcher
        android:id="@+id/viewSwitcher"
        android:layout_width="match_parent"
        android:layout_alignTop="@id/middle_separator"
        android:layout_height="wrap_content">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottomLayout"
            android:layout_alignTop="@id/middle_separator"
            android:orientation="vertical">

            <include
                android:id="@+id/sudoku_board"
                layout="@layout/fragment_main_options" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/recordingFeedbackLayout"
            android:layout_alignTop="@id/middle_separator"
            android:orientation="vertical">

            <com.banba.dictator.view.AudioEventView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#00000000"
                android:layout_margin="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/eventView"
                android:src="@drawable/record_stop_half" />

        </LinearLayout>
    </ViewSwitcher>
</RelativeLayout>