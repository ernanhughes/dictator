<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/BlueActionBar</item>
    </style>

    <style name="BlueActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/primary_color</item>
    </style>

    <!-- custom light theme: -->
    <color name="dialog_message_text">#333333</color>
    <color name="dialog_title_text">#f3a71e</color>
    <color name="dialog_title_separator">#f3a71e</color>
    <color name="dialog_button_text">#333333</color>
    <color name="dialog_button_normal">@android:color/transparent</color>
    <color name="dialog_button_pressed">#99f3a71e</color>
    <!-- 60 % opacity -->
    <color name="dialog_button_focused">#4Cf3a71e</color>
    <!-- 30 % opacity -->
    <color name="dialog_button_separator">#25000000</color>
    <!-- 7% opacity -->
    <color name="background">#FFA500</color>
    <!-- custom dark theme: -->
    <color name="dialog_message_text_dark">#FFFFFF</color>
    <color name="dialog_title_text_dark">#F8A500</color>
    <color name="dialog_title_separator_dark">#F8A500</color>
    <color name="dialog_button_text_dark">#FFFFFF</color>
    <color name="dialog_button_normal_dark">@android:color/transparent</color>
    <color name="dialog_button_pressed_dark">#99F8A500</color>
    <!-- 60 % opacity -->
    <color name="dialog_button_focused_dark">#4CF8A500</color>
    <!-- 30 % opacity -->
    <color name="dialog_button_separator_dark">#12FFFFFF</color>
    <!-- 7% opacity -->
    <color name="background_dark">#C35817</color>


    <style name="AppTheme.MainPageIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/main_button_border</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="AppTheme.HeaderText">
        <item name="android:textSize">@dimen/title_section_textSize</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/title_font_color</item>
    </style>

    <style name="AppTheme.SubTitleText" parent="AppTheme.HeaderText">
        <item name="android:textSize">@dimen/list_sub_title_textSize</item>
    </style>

    <style name="header_outer_layout">
        <item name="android:layout_marginTop">@dimen/card_header_outer_view_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/card_header_outer_view_margin_bottom</item>
        <item name="android:layout_marginLeft">@dimen/card_header_outer_view_margin_left</item>
        <item name="android:layout_marginRight">@dimen/card_header_outer_view_margin_right</item>
    </style>


    <!-- Header -->
    <dimen name="card_header_outer_view_margin_top">0dp</dimen>
    <dimen name="card_header_outer_view_margin_left">0dp</dimen>
    <dimen name="card_header_outer_view_margin_bottom">0dp</dimen>
    <dimen name="card_header_outer_view_margin_right">0dp</dimen>

    <style name="AppTheme.MainPageIconText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/title_section_textSize</item>
        <item name="android:layout_marginLeft">@dimen/title_section_margin</item>
        <item name="android:layout_marginRight">@dimen/title_section_margin</item>
        <item name="android:layout_marginBottom">@dimen/title_section_margin_bottom</item>
        <item name="android:layout_marginTop">@dimen/title_section_margin_top</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/icon_font_color</item>
    </style>

    <style name="AppTheme.FragmentTitleText">
        <item name="android:textSize">@dimen/package_title_section_textSize</item>
        <item name="android:layout_marginLeft">@dimen/title_section_margin</item>
        <item name="android:layout_marginRight">@dimen/title_section_margin</item>
        <item name="android:layout_marginBottom">@dimen/title_section_margin_bottom</item>
        <item name="android:layout_marginTop">@dimen/title_section_margin_top</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/icon_selected_color</item>
    </style>

    <style name="AppTheme.SmallBoldText">
        <item name="android:textSize">@dimen/small_bold_textSize</item>
        <item name="android:layout_marginLeft">@dimen/title_section_margin</item>
        <item name="android:layout_marginRight">@dimen/title_section_margin</item>
        <item name="android:layout_marginBottom">@dimen/title_section_margin_bottom</item>
        <item name="android:layout_marginTop">@dimen/title_section_margin_top</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/list_title_color</item>
    </style>


    <style name="card_outer">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">@dimen/card_outer_padding_top</item>
        <item name="android:paddingBottom">@dimen/card_outer_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/card_outer_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/card_outer_padding_horizontal</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
    </style>

    <style name="card_inner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/card_inner_padding_left</item>
        <item name="android:paddingRight">@dimen/card_inner_padding_right</item>
        <item name="android:paddingTop">@dimen/card_inner_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/card_inner_padding_vertical</item>
        <item name="android:background">@drawable/card_selector</item>
        <item name="android:duplicateParentState">true</item>
    </style>


    <style name="card_thumbnail">
        <item name="android:layout_width">@dimen/card_thumbnail</item>
        <item name="android:layout_height">@dimen/card_thumbnail</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginRight">@dimen/card_thumbnail_margin</item>
    </style>

    <style name="card_title_frame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">@dimen/card_title_margin_left</item>
        <item name="android:layout_toRightOf">@android:id/icon</item>
    </style>

    <style name="card_expand_inner_layout">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="card_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/card_title</item>
        <item name="android:textColor">@color/title_font_color</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_toLeftOf">@android:id/button1</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="detail_header">
        <item name="android:textSize">@dimen/card_subheader</item>
        <item name="android:textColor">@color/card_text_color_header</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="detail_item">
        <item name="android:textSize">@dimen/card_content</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:singleLine">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>


    <style name="card_popup_anchor">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@drawable/card_menu_button</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="card_shadow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/card_shadow</item>
        <item name="android:src">@drawable/card_shadow</item>
        <item name="android:layout_below">@+id/inner_frame</item>
    </style>

    <style name="card_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/card_content</item>
        <item name="android:layout_below">@+id/titleFrame</item>
        <item name="android:layout_toRightOf">@android:id/icon</item>
        <item name="android:layout_marginLeft">@dimen/card_title_margin_left</item>
        <item name="android:layout_marginRight">@dimen/card_title_margin_left</item>
    </style>


</resources>
